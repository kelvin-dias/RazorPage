@model ApplicationRazorPage.AdicionarOcorrenciaModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "AdicionarOcorrencia";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>AdicionarOcorrencia</h1>

<h4>Ocorrencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ocorrencia.Titulo" class="control-label"></label>
                <input asp-for="Ocorrencia.Titulo" class="form-control" />
                <span asp-validation-for="Ocorrencia.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ocorrencia.DataHoraAbertura" class="control-label"></label>
                <input asp-for="Ocorrencia.DataHoraAbertura" class="form-control" />
                <span asp-validation-for="Ocorrencia.DataHoraAbertura" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ocorrencia.StatusOcorrencia" /> @Html.DisplayNameFor(model => model.Ocorrencia.StatusOcorrencia)
                </label>
            </div>
            @*<div class="form-group">
                <label asp-for="Ocorrencia.CriticidadeOcorrencia" class="control-label"></label>
                <select asp-for="Ocorrencia.CriticidadeOcorrencia" class="form-control"></select>
                <span asp-validation-for="Ocorrencia.CriticidadeOcorrencia" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Ocorrencia.Solucao" class="control-label"></label>
                <input asp-for="Ocorrencia.Solucao" class="form-control" />
                <span asp-validation-for="Ocorrencia.Solucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
